<%= form_for @post do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br /><br>

  <%= f.label :content %>:
  <%= f.text_field :content %><br /><br>

  <%= f.label :likes %>:
  <%= f.number_field :likes %><br /><br>
  
   <%= f.label "blogger" %>
   <%= f.collection_select :blogger_id, Blogger.all, :id, :name %>

   <%= f.label "destination" %>
   <%= f.collection_select :destination_id, Destination.all, :id, :name %>

  <%= f.submit %>
<% end %>
<br>


